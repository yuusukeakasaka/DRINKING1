<h1>投稿一覧</h1>

<% @posts.each do |post| %>

 <%= attachment_image_tag post, :image, size: "200x200", format: 'jpeg' %>
 <p>ユーザーネーム：<%= post.user.name %></p>
<p>投稿ユーザー画像：<%= attachment_image_tag post.user, :icon_image, :fill, 60, 60, fallback: "no_image.png" %></p>
<p>タイトル：<%= post.title %></p>
 <p>本文：<%= post.text %></p>

 <div>
  <%= link_to "削除", admins_post_path(post), method: :delete %>
</div>

<% end %>