<div id="notice"></div>
<div class="container">
  <div class="row">
    <div class="col-md-8 my-5">
      <h4>新規会員登録</h4>
    </div>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/users/shared/error_messages", resource: resource %>

  <div class="row">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td><%= f.label :ニックネーム %></td>
          <td><%= f.text_field :name, autofocus: true, placeholder:"のんべえ" %></td>
        </tr>
        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"example@example.co.jp" %></td>
        </tr>
        <tr>
          <td>
             <%= f.label :パスワード %>
             <% if @minimum_password_length %>
             <em>(<%= @minimum_password_length %> 文字以上)</em>
             <% end %>
          </td>
          <td>
             <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :パスワード（確認用） %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "新規登録" %></td>
        </tr>
        </tbody>
    </table>
  </div>
<% end %>
</div>

  <div class="row">
   <div class="col-md-10 text-center">
    <div>既に登録済みの方</div>
     <div><%= link_to "こちら", new_user_session_path %>からログインしてください。</div>
    </div>
   </div>
  </div>
