<!DOCTYPE html>
<html>
  <head>
    <title>DRINKING</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">

          <% if admin_signed_in? %>
           <h5><%= link_to image_tag("logo.jpg", :size =>'200x200', class: "image"), admins_root_path, class: 'nav-link text-dark' %></h3>
           <% else %>
           <h5><%= link_to image_tag("logo.jpg", :size =>'200x200', class: "image"), root_path, class: 'nav-link text-dark' %></h3>
           <% end %>


        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
           </button>
           <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">


             <% if user_signed_in? %>
             <li class="nav-item">
             <%= link_to "マイページ", user_path(current_user.id), class: 'nav-link text-dark' %>
             </li>
             <li class="nav-item">
             <%= link_to "記事一覧（フォロワーのみ）", posts_path, class: 'nav-link text-dark' %>
             </li>
             <li class="nav-item">
             <%= link_to "記事一覧", root_path, class: 'nav-link text-dark' %>
             </li>
             <li class="nav-item">
             <%= link_to "募集一覧", recruitments_path, class: 'nav-link text-dark' %>
             </li>
             <li class="nav-item">
             <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
             </li>
             <% elsif admin_signed_in? %>
             <li class="nav-item">
             <%= link_to "記事一覧", admins_posts_path, class: 'nav-link text-dark' %>
             </li>
             <li class="nav-item">
             <%= link_to "募集一覧", admins_recruitments_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
            <%= link_to "ユーザー一覧", admins_users_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
            <% else %>
            <li class="nav-item">
            <%= link_to "About", homes_about_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
            <%= link_to "記事一覧", root_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
           </ul>
           </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
