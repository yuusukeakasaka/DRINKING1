<% if @post.errors.any? %>
<p>タイトルか本文が空欄になっているか、<br>
   文字数が長すぎます。
<% end %>

<div class="container">
 <div class= "row">
　<div class="col-md-4 my-8">
   <h4>プロフィール編集</h4>
  </div>
 </div>
<%= form_with model: @post, local:true do |f| %>

<div class="row">
  <div class="col-md-10">
    <table class="table table-borderless">
      <tbody>
       <tr>
        <td>画像</td>
        <td><%= f.attachment_field :image %></td>
       </tr>
       <tr>
         <td>タイトル</td>
         <td><%= f.text_field :title, placeholder:"タイトル(30文字以内)" %></td>
       </tr>
       <tr>
         <td>本文</td>
         <td><%= f.text_area :text, size: "40x20", placeholder:"本文を書いてください。(300文字以内)" %></td>
       </tr>
       <tr>
         <td></td>
         <td><%= f.submit '投稿' %></td>
       </tr>
       <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>